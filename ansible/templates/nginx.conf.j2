# TMCP Server Nginx Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

upstream tmcp_app {
  server unix:///var/run/tmcp/puma.sock;
}

# Redirect HTTP to HTTPS
server {
  listen 80;
  server_name {{ base_url | regex_replace('https://', '') }};
  return 301 https://$server_name$request_uri;
}

# HTTPS server configuration
server {
  listen 443 ssl http2;
  server_name {{ base_url | regex_replace('https://', '') }};

  # SSL Configuration
  ssl_certificate /etc/ssl/certs/tmcp.crt;
  ssl_certificate_key /etc/ssl/private/tmcp.key;
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
  ssl_prefer_server_ciphers off;
  ssl_session_cache shared:SSL:10m;
  ssl_session_timeout 10m;

  # Security headers
  add_header X-Frame-Options DENY;
  add_header X-Content-Type-Options nosniff;
  add_header X-XSS-Protection "1; mode=block";
  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
  add_header Referrer-Policy "strict-origin-when-cross-origin" always;

  # Logs
  access_log /var/log/nginx/tmcp.access.log;
  error_log /var/log/nginx/tmcp.error.log;

  # Root location
  location / {
    proxy_pass http://tmcp_app;
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # WebSocket support for real-time features
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";

    # Timeouts
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;

    # Buffer settings
    proxy_buffering on;
    proxy_buffer_size 4k;
    proxy_buffers 8 4k;
  }

  # Health check endpoint (no logging)
  location /health/check {
    proxy_pass http://tmcp_app;
    access_log off;

    # Allow more frequent health checks
    limit_req zone=health_check burst=10 nodelay;
  }

  # Matrix Application Service endpoints
  location /_matrix/ {
    proxy_pass http://tmcp_app;
    proxy_set_header Authorization $http_authorization;

    # Matrix AS endpoints may need longer timeouts
    proxy_read_timeout 300s;
    proxy_send_timeout 300s;
  }

  # Static assets with caching
  location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
    proxy_pass http://tmcp_app;

    # Cache static assets for 1 year
    expires 1y;
    add_header Cache-Control "public, immutable";

    # Security headers for assets
    add_header X-Content-Type-Options nosniff;
  }

  # API endpoints
  location /api/ {
    proxy_pass http://tmcp_app;

    # API-specific settings
    client_max_body_size 10m;

    # Rate limiting for API endpoints
    limit_req zone=api burst=100 nodelay;
  }

  # Rate limiting zones (defined in nginx.conf)
  # limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
  # limit_req_zone $binary_remote_addr zone=health_check:10m rate=1r/s;

  # Deny access to sensitive files
  location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
  }

  location ~ /(config|tmp|log)/ {
    deny all;
    access_log off;
    log_not_found off;
  }
}